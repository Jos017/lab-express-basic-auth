<div id="form">
  <h2>Login</h2>
  <form action="/auth/login" method="POST">
 
    <label> Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit">Login</button>
 
    {{!-- error message will be added here --}}
  </form>
  {{#if errorMessage}}
  <p>{{errorMessage}}</p>
  {{/if}}
</div>